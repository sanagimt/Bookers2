<div class="container">
    <div class="row">
        <div class="col-sm12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>
            <%= form_with model: @user do |f| %>
                <div>
                <label for ="user_name">Name</label>
                <%= f.text_field :name, class:"form-control name" %>
                </div>
                <div>
                <label for ="user_image">Image</label>
                <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*", class: "form-control-file user_image" %>
                </div>
                <div>
                <label for ="user_introduction">Introduction</label>
                <%= f.text_area :introduction, class: "form-control introduction" %>
                </div>
                <div>
                <%= f.submit 'Update User', class: "btn btn-secondary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
