<div class="col-md-3">
    <h2> User info </h2>
    <table class="table">
    <%= image_tag user.get_profile_image(100,100) %>
        <tr>
            <th>name</th>
            <th><%= user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
        </tr>
    </table>

    <div class="row">
    <%= link_to edit_user_path(current_user), class: "btn brn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i>
    <% end %>
    </div>

    <h2> New book </h2>
    <%= form_with model: book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>

        <p>Option</p>
        <%= f.text_area :body %>
        <p></p>
        <%= f.submit "Create Book", class: "btn btn-success" %>
    <% end %>
</div>