<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <h2> User info </h2>
            <table class="table">
            <%= image_tag @user.get_profile_image(100,100) %>
                <tr>
                    <th>name</th>
                    <th><%= @user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= @user.introduction %></th>
                </tr>
            </table>

            <div class="row">
            <%= link_to edit_user_path(current_user), class: "btn brn-outline-secondary btn-block" do %>
            <i class="fa-solid fa-user-gear"></i>
            <% end %>
            </div>

            <h2> New book </h2>
            <%= form_with model: @book do |f| %>
                <p>Title</p>
                <%= f.text_field :title %>

                <p>Option</p>
                <%= f.text_area :body %>
                <p></p>
                <%= f.submit "Create Book", class: "btn btn-success" %>
            <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Option</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book|%>
                        <tr>
                            <td>
                                <% if book.user.present? %>
                                <%= image_tag book.user.get_profile_image(100,100) %>
                                <% end %>
                            </td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>